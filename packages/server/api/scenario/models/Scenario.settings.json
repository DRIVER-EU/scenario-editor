{
  "connection": "default",
  "collectionName": "scenario",
  "info": {
    "name": "scenario",
    "description": "Top level element of the scenario manager"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "default": "New scenario"
    },
    "description": {
      "type": "text"
    },
    "logo": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "location": {
      "type": "string"
    },
    "exerciseType": {
      "default": "e.g. CPX (Command Post eXercise), CAX (Computer Aided Exercise) and FTX (Field Training Exercise)",
      "type": "string",
      "required": true
    },
    "exerciseMode": {
      "default": true,
      "type": "boolean",
      "required": true
    },
    "classification": {
      "type": "string",
      "required": true
    },
    "exerciseStart": {
      "type": "date",
      "required": true
    },
    "exerciseEnd": {
      "type": "date",
      "required": true
    },
    "scenarioStart": {
      "type": "date",
      "required": true
    },
    "welcomeMessage": {
      "type": "text"
    },
    "timeZone": {
      "type": "string",
      "required": true
    },
    "dayCharacter": {
      "default": "D",
      "type": "string",
      "required": true
    },
    "audiences": {
      "collection": "audience",
      "via": "scenario",
      "dominant": true
    },
    "useCMS": {
      "type": "boolean"
    },
    "mediaItems": {
      "collection": "mediaitem",
      "via": "scenario",
      "dominant": true
    },
    "useKeyProcesses": {
      "type": "boolean"
    },
    "useObjectives": {
      "type": "boolean"
    },
    "objectives": {
      "collection": "objective",
      "via": "scenario",
      "dominant": true
    },
    "missions": {
      "collection": "mission",
      "via": "scenario",
      "dominant": true
    },
    "keyProcesses": {
      "collection": "keyprocess",
      "dominant": true,
      "via": "scenario"
    }
  }
}
